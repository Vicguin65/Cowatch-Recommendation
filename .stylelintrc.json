{
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-tailwindcss"
    ],
    "rules": {
      "indentation": 2,
      "number-leading-zero": "always",
      "string-quotes": "double",
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": [
          true,
          {
              "ignoreAtRules": ["tailwind"]
          }
      ]
    }
  }